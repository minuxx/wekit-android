<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/set_list_item_border" />
            <solid android:color="@color/set_list_item_border" />
            <corners  android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"/>
        </shape>
    </item>

    <item android:top="1dp">
        <shape
            android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/set_list_item_bg" />
            <solid android:color="@color/set_list_item_bg" />
            <corners  android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"/>
        </shape>
    </item>
</layer-list>