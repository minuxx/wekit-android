<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.interest_miracle.InterestMiracleActivity">

    <data>

        <variable
            name="viewModel"
            type="com.coconutplace.wekit.ui.interest_miracle.InterestMiracleViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectMiracle_back_layout"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/selectMiracle_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/cd_ic_back"
                android:paddingStart="20dp"
                android:paddingTop="12dp"
                android:paddingEnd="12dp"
                android:paddingBottom="12dp"
                android:src="@drawable/icn_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/selectMiracle_intro01_tv"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center"
            android:text="@string/selectMiracle_intro01"
            android:textColor="@color/gray"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectMiracle_back_layout" />

        <TextView
            android:id="@+id/selectMiracle_intro02_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="62dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="62dp"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center"
            android:text="@string/selectMiracle_intro02"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectMiracle_intro01_tv"
            tools:text="도전하고 싶은\n미라클 챌린지를 알려주세요" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectMiracle_select01_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="54dp"
            android:layout_marginEnd="65dp"
            android:background="@{viewModel.miracle.equals(@string/miracle_M) ? @drawable/bg_interest_miracle_menuclick : @drawable/bg_interest_miracle_menu}"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:onClick="@{() -> viewModel.miracleMorning()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectMiracle_intro02_tv">

            <ImageView
                android:id="@+id/selectMiracle_select01_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/icn_sun"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/selectMiracle_select01_tv"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/selectMiracle_select01_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/selectMiracle_select01"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectMiracle_select01_iv"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectMiracle_select02_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="65dp"
            android:background="@{viewModel.miracle.equals(@string/miracle_N) ? @drawable/bg_interest_miracle_menuclick : @drawable/bg_interest_miracle_menu}"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:onClick="@{() -> viewModel.miracleNight()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectMiracle_select01_layout">

            <ImageView
                android:id="@+id/selectMiracle_select02_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/icn_moon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/selectMiracle_select02_tv"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/selectMiracle_select02_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/selectMiracle_select02"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectMiracle_select02_iv"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/selectMiracle_select03_layout"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="65dp"
            android:background="@{viewModel.miracle.equals(@string/miracle_G) ? @drawable/bg_interest_miracle_menuclick : @drawable/bg_interest_miracle_menu}"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:onClick="@{() -> viewModel.varietyRoutine()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/selectMiracle_select02_layout">

            <ImageView
                android:id="@+id/selectMiracle_select03_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="9dp"
                android:src="@drawable/icn_check"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/selectMiracle_select03_tv"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/selectMiracle_select03_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/selectMiracle_select03"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/selectMiracle_select03_iv"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/selectMiracle_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_bias="0.7"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@{viewModel.isNext ? @color/select_Active : @color/select_unActive}"
            android:clickable="@{viewModel.isNext? true : false}"
            android:src="@drawable/icn_next"
            app:borderWidth="0dp"
            app:fabCustomSize="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
