<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@color/light_gray"/>

        <TextView
            android:id="@+id/channel_miracle_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="23dp"
            android:layout_marginStart="28dp"
            android:text="AM XX"
            android:textSize="10sp"
            android:textColor="@color/channel_authTime_text"
            android:fontFamily="@font/notosanskr_medium"
            android:maxLines="1"
            app:drawableTopCompat="@drawable/ic_challenge_sun"
            android:drawablePadding="2dp"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/channel_name_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:maxWidth="220dp"
            app:layout_constraintLeft_toRightOf="@+id/channel_miracle_time_txt"
            app:layout_constraintTop_toTopOf="@id/channel_miracle_time_txt"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/notosanskr_medium"/>

        <TextView
            android:id="@+id/channel_member_count_text"
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            app:layout_constraintLeft_toRightOf="@id/channel_name_text"
            app:layout_constraintTop_toTopOf="@+id/channel_name_text"
            app:layout_constraintBottom_toBottomOf="@id/channel_name_text"
            android:layout_marginStart="6dp"
            android:paddingStart="10dp"
            android:paddingTop="1dp"
            android:paddingEnd="12dp"
            android:paddingBottom="1dp"
            android:background="@drawable/bg_channel_myroom_duration_text"
            app:drawableLeftCompat="@drawable/ic_people"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/notosanskr_bold"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/channel_explain_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintTop_toBottomOf="@id/channel_name_text"
            app:layout_constraintLeft_toLeftOf="@+id/channel_name_text"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/notosanskr_regular"/>

